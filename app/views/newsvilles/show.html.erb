<p id="notice"><%= notice %></p>

<p>
  <strong>View:</strong><br />
  <%= link_to "Original Story", @newsville.title_url, target: "_blank" %>
</p>

<p>
  <strong>Headline:</strong><br />
  <%= @newsville.title %>
</p>

<p>
  <strong>Story Summary:</strong><br />
  <%= @newsville.body %>
</p>

<p>
  <strong>Posted:</strong><br />
  <%= time_ago_in_words(@newsville.created_at) %> ago
</p>

<p>
  <strong>Image:</strong><br />
  <% if @newsville.image_url.present? %>
    <td><%= image_tag @newsville.image_url %></td>
  <% else %>
    <td><%= image_tag 'nia.png' %></td>
  <% end %>
</p>

<%= link_to 'Back to Newsvilles', newsvilles_path, class: 'btn btn-info btn-xs' %> <hr>

<%= render @newsville.comments %>

<div class="col-md-12">
  <%= simple_form_for [@newsville, Comment.new] do |comment| %>
    <%= comment.input :body %>
    <%= comment.submit "Add Comment", class: "btn btn-danger" %>
  <% end %>
</div>

<hr>
