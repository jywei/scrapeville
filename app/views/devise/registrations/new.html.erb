<div class='row'>
  <div class='col-xs-6 col-xs-offset-3 form'>

    <h3>Sign Up</h3>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs form-group">
        <%= f.input :username, required: true, autofocus: true, class: "form-control" %>
        <%= f.input :email, required: true, autofocus: false, class: "form-control"  %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: "form-control"  %>
        <%= f.input :password_confirmation, required: true, class: "form-control"  %>
        <hr>
        <%= f.button :submit, "Sign Up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
